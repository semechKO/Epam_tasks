import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Arrays;
import java.util.Random;
import java.util.StringJoiner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

/**
 * Created by dpolyvyan on 18.04.2017.
 */
public class Massives {

    public void task1() throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Введите количество строк: ");
        int line_count=Integer.parseInt(reader.readLine());
        String[][] lines_array = new String[line_count][2];
        double sum = 0;
        for(int i=0;i<line_count;i++){
            System.out.println("Введите строку: ");
            String line = reader.readLine();
            lines_array[i][0]=line;
            lines_array[i][1]=String.valueOf(line.length());
            sum += Integer.parseInt(lines_array[i][1]);
        }
        for(int i=0;i<line_count;i++){
            if(Integer.parseInt(lines_array[i][1])<sum/lines_array.length){
                System.out.println(lines_array[i][0]+ " "+lines_array[i][1]);
            }
        }
    }

    public void task2() throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Введите количество слов: ");
        int words_count=Integer.parseInt(reader.readLine());
        String[][] words = new String[words_count][3];
        for(int i=0;i<words_count;i++){
            int vowels=0;
            int consonants=0;
            System.out.println("Введите слово: ");
            String word = reader.readLine();
            words[i][0]=word;

            if(word.matches("[aA-zZ]+")){
                for(int j=0;j<word.length();j++){
                    if(String.valueOf(word.charAt(j)).toLowerCase().matches("[a,e,i,o,u,y]")){
                        vowels+=1;
                        words[i][1]=String.valueOf(vowels);
                    } else {
                        consonants+=1;
                        words[i][2]=String.valueOf(consonants);
                    }
                }
            }
        }
        for(int i=0;i<words_count;i++){
            if(words[i][1]!=null&&Integer.parseInt(words[i][1])==Integer.parseInt(words[i][2])){
                System.out.println(words[i][0]);
            }
        }
        //System.out.println(words[0][1]+" "+words[0][2]);
    }

    public void task3() throws Exception {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Введите номер месяца(от 1 до 12): ");
            int month=Integer.parseInt(reader.readLine());
        if (month<1||month>12){
            throw new Exception("Число не входит в диапазон от 1 до 12");
        }
        switch (month){
            case 1:
                System.out.println("Январь");
                break;
            case 2:
                System.out.println("Февраль");
                break;
            case 3:
                System.out.println("Март");
                break;
            case 4:
                System.out.println("Апрель");
                break;
            case 5:
                System.out.println("Май");
                break;
            case 6:
                System.out.println("Июнь");
                break;
            case 7:
                System.out.println("Июль");
                break;
            case 8:
                System.out.println("Август");
                break;
            case 9:
                System.out.println("Сентябрь");
                break;
            case 10:
                System.out.println("Октябрь");
                break;
            case 11:
                System.out.println("Ноябрь");
                break;
            case 12:
                System.out.println("Декабрь");
                break;
        }

    }

    public void task4() throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Введите размерность матрицы: ");
        int matrix_length = Integer.parseInt(reader.readLine());
        Random rand = new Random();
        int[][] matrix = new int[matrix_length][matrix_length];
        for(int i=0;i<matrix_length;i++){
            for(int j =0;j<matrix_length;j++){
                matrix[i][j]=rand.nextInt();
            }
        }
        for(int[] row:matrix){
            System.out.println(Arrays.toString(row));
        }
        System.out.println("Введите номер столбца, по которому будет проводиться сортировка: ");
        int column_number = Integer.parseInt(reader.readLine())-1;
        int trash;
        for(int i=1;i<matrix_length;i++){
            System.out.println(matrix[i-1][column_number]+" "+matrix[i][column_number]);
            if(matrix[i-1][column_number]>matrix[i][column_number]){
                for(int j =0;j<matrix_length;j++){
                    for(int k=1;k<matrix_length;k++){
                        trash=matrix[k-1][j];
                        matrix[k-1][j]=matrix[k][j];
                        matrix[k][j]=trash;
                    }
                }
            }
        }
        for(int[] row:matrix){
            System.out.println(Arrays.toString(row));
        }
    }

    public static void main(String[] args) throws IOException {
    Massives massives = new Massives();
        try {
            massives.task4();
        } catch (IOException e) {
            e.printStackTrace();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
